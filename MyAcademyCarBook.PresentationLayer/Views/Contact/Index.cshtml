@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <title>Car Rent &mdash; Free Website Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=DM+Sans:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/carrent-master/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/carrent-master/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/carrent-master/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/carrent-master/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/carrent-master/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/carrent-master/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/carrent-master/css/aos.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/carrent-master/css/style.css">

</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

    <div class="site-wrap" id="home-section">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>


                        @await Component.InvokeAsync("_NavBarUILayoutComponentPartial")
                       
       

        <div class="ftco-blocks-cover-1">
            <div class="ftco-cover-1 overlay innerpage" style="background-image: url('/carrent-master/images/post_1.jpg')">
                <div class="container">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-lg-6 text-center">
                            <h1>İletişime Geç</h1>
                            <p>Hemen formu doldur size en uygun aracı açıklamaya yaz sizin için en iyi aracı ayırtalım.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="site-section bg-light" id="contact-section">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-7 text-center mb-5">
                        <h2>Araç Rezervasyonu İçin ve Farklı Fikirlerinizi İletmek İçin Formu Doldurabilirsin</h2>
                        <p></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8 mb-5">
                        <form  method="post">
                            <div class="form-group row">
                                <div class="col-md-6 mb-4 mb-lg-0">
                                    <input type="text" class="form-control" name="Name" placeholder="Adınız">
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" name="Surname" placeholder="Soyadınız">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    <input type="text" class="form-control" name="Mail" placeholder="Mail Adresiniz">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-12">
                                    <textarea  id="" class="form-control" name="Message" placeholder="Mesajını Yaz." cols="30" rows="10"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6 mr-auto">
                                    <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="Mesaj Gönder">
                                </div>
                            </div>
                        </form>
                    </div>
                    @await Html.PartialAsync("Info")
                </div>
            </div>
        </div>


        @await Component.InvokeAsync("_FooterUILayoutComponentPartial")

    </div>

    <script src="~/carrent-master/js/jquery-3.3.1.min.js"></script>
    <script src="~/carrent-master/js/popper.min.js"></script>
    <script src="~/carrent-master/js/bootstrap.min.js"></script>
    <script src="~/carrent-master/js/owl.carousel.min.js"></script>
    <script src="~/carrent-master/js/jquery.sticky.js"></script>
    <script src="~/carrent-master/js/jquery.waypoints.min.js"></script>
    <script src="~/carrent-master/js/jquery.animateNumber.min.js"></script>
    <script src="~/carrent-master/js/jquery.fancybox.min.js"></script>
    <script src="~/carrent-master/js/jquery.easing.1.3.js"></script>
    <script src="~/carrent-master/js/bootstrap-datepicker.min.js"></script>
    <script src="~/carrent-master/js/aos.js"></script>
    <script src="~/carrent-master/js/main.js"></script>

</body>

</html>

