@model List<HowItWorksStep>
@{
    int i = 0;
}

<div class="container site-section mb-5">
    <div class="row justify-content-center text-center">
        <div class="col-7 text-center mb-5">
            <h2>Sistem nasıl Çalışır</h2>
            <p>Size kısaca araç kiralama işlemlerinden bahsedeceğim </p>
        </div>
    </div>
    <div class="how-it-works d-flex justify-content-center">

        @foreach(var item in Model)
        {
            i++;
            <div class="step">
                <span class="number"><span>@("0"+i)</span></span>
                <span class="caption">@item.Description</span>
            </div>
        }
       
    </div>
</div>
