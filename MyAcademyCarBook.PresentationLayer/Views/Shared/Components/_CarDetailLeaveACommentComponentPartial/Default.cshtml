


<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Yapın</h3>
    <form method="post" asp-controller="Comment" asp-action="AddComment">

        <input type="hidden" name="CarID" value="@ViewBag.Id">

        <div class="form-group">
            <label for="name">Adınız Soyadınız</label>
            <input type="text" name="NameSurname" class="form-control" id="name">
        </div>
               
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="Description" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>



       
       

        <div class="form-group">
            <input type="submit"  value="Yorum Yap" class="btn btn-primary btn-md text-white">
        </div>

    </form>
</div>