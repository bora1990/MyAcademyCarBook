@model List<Comment>

@if (Model.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        Malesef burada hiç yorum yok !
    </div>
}

<h3 class="mb-5">@Model.Count() Yorum</h3>
<ul class="comment-list">


    @foreach (var item in Model)
    {
        <li class="comment">
            <div class="comment-container">
                <div class="user-initials background-green me-4">@item.NameSurname.Substring(0,1)</div>
                <p class="me-3"><span style="margin-right:15px">@item.NameSurname</span> <span style="font-size:small">@item.CreatedDate.ToLongDateString()</span></p>
            </div>

            <div style="margin-left: 65px;">
                <p>@item.Description</p>
            </div>
        </li>
    }
</ul>