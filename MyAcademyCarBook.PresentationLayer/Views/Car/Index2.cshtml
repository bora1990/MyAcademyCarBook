@model List<MyAcademyCarBook.EntityLayer.Concrete.Car>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var i = 0;
}

<h1 class="mt-3 mb-3">Araba Listesi</h1>


<form asp-action="Index2" method="get" asp-controller="Car">

    <div>
        <p>
            <b>Lütfen Model Adını giriniz :</b>
            <input type="text" name="p" value="@ViewData["CurrentFilter"]" class="form-control" style="border:1px solid #222" placeholder="Model Adına göre araç bul" />
        </p>
        <br />
        <input type="submit" class="btn btn-dark mb-3" value="Aracı Bul" />

    </div>
</form>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Model</th>
        <th>Kategori</th>
        <th>Marka</th>
        <th>Vites Türü</th>
        <th>Yıl</th>
        <th>Araba Durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Sitede Gör</th>

    </tr>
    
    @foreach (var item in Model)
    {
        i++;

        <tr>

            <td>@i</td>
            <td>@item.Model</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.Brand.BrandName</td>
            <td>@item.GearType</td>
            <td>@item.Year</td>
            <td>@item.CarStatus.CarStatusName</td>
            <td><a href="/Car/DeleteCar/@item.CarID/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Car/UpdateCar/@item.CarID/" class="btn btn-outline-primary">Guncelle</a></td>
            <td><a href="/Car/CarDetail/@item.CarID/" class="btn btn-outline-dark">Detaylar</a>
          
            <td><a href="/Car/CarDetail/@item.CarID/" class="btn btn-outline-success">Sitede Gör</a></td>


        </tr>


    }

</table>

<a href="/car/createCar/" class="btn btn-outline-primary">Yeni Araç Girişi</a>