@model List<Price>

@{
    Layout = null;
    var filteredCars = ViewBag.filteredCars as List<Car>;
}

<!doctype html>
<html lang="en">

<head>
    <title>Car Rent &mdash; Free Website Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=DM+Sans:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/carrent-master/fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/carrent-master/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/carrent-master/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/carrent-master/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/carrent-master/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/carrent-master/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/carrent-master/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/carrent-master/css/aos.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/carrent-master/css/style.css">

    <style>
        form  {
            
            padding:15px;
        }
    </style>

</head>

<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">


    <div class="site-wrap" id="home-section">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>



        @await Component.InvokeAsync("_NavBarUILayoutComponentPartial")

        <div class="ftco-blocks-cover-1">
            <div class="ftco-cover-1 overlay" style="background-image: url('/carrent-master/images/cover.jpg');background-size:100% 100%" >
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-5">
                            <div class="feature-car-rent-box-1" style=" color:white;background-color: blue;opacity:0.7;">
                                <h3 style="color:white;">Kriterleri Belirleyin ...</h3>
                                <form method="get" asp-action="Index" asp-controller="RentACar" font-family:monospace>
                                    <ul class="list-unstyled">
                                        <li class="d-flex flex-row justify-content-between">
                                            <span>Koltuk Sayısı</span>
                                            <select class="form-select" style="width:100px;" name="seats">
                                                <option value="5">5</option>
                                                <option value="2">2</option>
                                            </select>
                                        </li>

                                        <li class="d-flex flex-row justify-content-between">
                                            <span>Vites Tipi</span>
                                            <select class="form-select" name="gears" style="width:100px;">
                                                
                                                <option value="Otomatik">Otomatik</option>
                                                <option value="Manuel">Manuel</option>
                                                <option value="Triptonik">Triptonik</option>
                                            </select>
                                        </li>

                                        <li class="d-flex flex-row justify-content-between">
                                            <span>Yıl</span>
                                            <input type="number" name="year" style="width:100px !important;" min="1900" value="2023" />
                                        </li>



                                        <li class="d-flex flex-row justify-content-between">
                                            <span>Kategori</span>
                                            <select name="category" asp-items="ViewBag.Categories" style="width:100px;"></select>
                                        </li>

                                        <li class="d-flex flex-row justify-content-between">
                                            <span>Marka</span>
                                            <select name="brand" asp-items="ViewBag.Brands" style="width:100px;"></select>
                                        </li>

                                    </ul>
                                    <div class="d-flex justify-content-center bg-light p-2">

                                        <button class="btn btn-primary" type="submit" style="width:300px">Ara</button>
                                    </div>
                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @await Component.InvokeAsync("_HowItWorksStepCompenentPartial")


        <div class="site-section bg-light">
            <div class="container">
                <div class="row justify-content-center text-center mb-5">
                    <div class="col-7 text-center mb-5">
                        <h2>Araç Yorumlarımız</h2>
                        <p>Araçlar hakkındaki detaylı yorumlar !</p>
                    </div>
                </div>
                <div class="row">

                    @await Component.InvokeAsync("_CommentComponentPartial")

                </div>
            </div>
        </div>

        @await Component.InvokeAsync("_FooterUILayoutComponentPartial")


    </div>

    @await Component.InvokeAsync("_ScriptUILayoutComponentPartial")

</body>

</html>

