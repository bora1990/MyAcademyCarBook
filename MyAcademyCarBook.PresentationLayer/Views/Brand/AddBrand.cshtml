@model MyAcademyCarBook.EntityLayer.Concrete.Brand
@{
    ViewData["Title"] = "AddBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h3>Yeni Marka Girişi</h3>
<form asp-action="AddBrand" asp-controller="Brand" method="post">

    <label>Marka Adı</label>
    <input type="text" asp-for="BrandName" class="form-control" style="border:1px solid #222" />


    <label>Aktif /Pasif</label>
    <input type="checkbox" asp-for="Status" />

    <br />
    <button class="btn btn-primary">Markayı Kaydet</button>

</form>

