@model List<MyAcademyCarBook.EntityLayer.Concrete.Brand>

@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1 class="mt-4 me-3">Marka Listesi</h1>
    <br /><br/>
    <table class="table table-bordered">
        <tr>
           <th>#</th>
           <th>Marka</th>
           <th>Durum</th>
           <th>Sil</th>
           <th>Güncelle</th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>

                <td>@item.BrandID</td>
                <td>@item.BrandName</td>
                <td>@item.Status</td>
                <td><a href="/Brand/DeleteBrand/@item.BrandID/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Brand/UpdateBrand/@item.BrandID/" class=" btn btn-outline-primary">Güncelle</a></td>
          
            </tr>
        }
       
  
    </table>

    <a href="/brand/addbrand/" class="btn btn-outline-primary"> Yeni Marka Girişi</a>