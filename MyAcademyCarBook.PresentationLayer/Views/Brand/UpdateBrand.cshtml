@model MyAcademyCarBook.EntityLayer.Concrete.Brand
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h3>Marka Güncelleme Sayfası</h3>

<form method="post">

        <input type="hidden" asp-for="BrandID" />
        <label>Marka Adı</label>
        <br />
        <input type="text" asp-for="BrandName" class="form-control mt-1" style="border:1px solid #222" />
   <br />
    <label>Aktif /Pasif</label>
    <input type="checkbox" asp-for="Status"  class="me-3"/>
        
        <button class="btn btn-primary">Markayı Güncelle</button>



</form>



